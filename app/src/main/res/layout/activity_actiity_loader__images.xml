<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.ActiityLoader_Images">
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="80dp"
app:cardBackgroundColor="@color/colorPrimaryDark"
      android:gravity="center"

      app:cardCornerRadius="10dp"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      >
     <LinearLayout
         android:layout_width="match_parent"
         android:gravity="center"
         android:layout_height="match_parent">
         <androidx.cardview.widget.CardView
             android:layout_width="40dp"
             android:id="@+id/card_color_shower"
             android:layout_height="40dp"
             app:cardBackgroundColor="#353232"
             app:cardCornerRadius="15dp"
             android:layout_gravity="center"
             />
         <TextView

             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:text=""
             android:fontFamily="@font/autour_one"
             android:textSize="20sp"
             android:textColor="@color/black"
             android:layout_marginLeft="20dp"
             android:id="@+id/cat_type_shower"
             />
     </LinearLayout>
  </androidx.cardview.widget.CardView>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <pl.droidsonroids.gif.GifImageView
        android:background="@drawable/alertdialog"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_height="100sp"
        android:padding="30dp"
        android:id="@+id/GifImageView1"
        android:src="@drawable/loading"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rv_loader"
        android:layout_height="match_parent"/>
</FrameLayout>


</LinearLayout>